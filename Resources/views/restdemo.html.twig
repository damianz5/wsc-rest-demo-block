<div class="row">
    <div class="col-sm-12"><h2 class="text-center">{{ album.title }}</h2></div>
    {% for photo in photos %}
        {% for selectedPhoto in selectedPhotos %}
            {% if photo.id == selectedPhoto %}
                <a href="{{ photo.url }}" class="col-sm-2">
                    <img src="{{ photo.thumbnailUrl }}" title="{{ photo.title }}" />
                </a>
            {% endif %}
        {% endfor %}
    {% endfor %}
</div>
